//7-slice(utiliza principio y fin)-devulve la subcadena definidendo la posicion(devuelve solamente la cadena delimitandose comotu lo hyas querido)
function exer7(text){
    const exer7="Hola me llamo Rey y tengo 20 años "
    console.log(exer7.slice(4,15))//se delimitara el principio y el fin con la pocision de el caracter// tambien se puede definr el inicio y por defecto el final sera el ultimo carcter
}

exer7()

