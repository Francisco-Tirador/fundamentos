//4-Trim()- elimina los espacios en blanco y alfinal de la cadena //actualiza la cadena 
function exer4(text){
    const exer4="                  Hola me llamo Rey y tengo 20 años(4)                "
    console.log(exer4.trim())
}

exer4()

//5-charAt(index//nota es el num del carcater que va a devolver )-duvuleve el caracter  en el index dado 
function exer5(text){
    const exer5="Hola me llamo Rey y tengo 20 años"
    console.log(exer5.charAt(20))
    console.log(exer5.charAt(15))
}

exer5()

