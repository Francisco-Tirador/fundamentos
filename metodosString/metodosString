//9-replace- remplaza la string seleccionada por la nwe string que se usara 
function exer9(text){
    const exer9="Hola me llamo Rey y tengo 20 años "
    console.log(exer9.replace("Rey","RAYO MACUIN"))// primera la que se va a remplzar y despues la nueva 
}

exer9()

